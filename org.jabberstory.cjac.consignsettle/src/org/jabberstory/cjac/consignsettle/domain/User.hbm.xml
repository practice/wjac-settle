<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
	
<hibernate-mapping package="org.jabberstory.cjac.consignsettle.domain" default-access="field">
	<!-- User -->
	<class name="User" table="USER">
		<id name="userId" column="USERID" length="32">
			<generator class="assigned" />
		</id>
		<property name="username" column="USERNAME" type="string" length="32" />
		<property name="email" column="EMAIL" type="string" length="64" />
		<property name="password" column="PASSWORD" type="string" length="64" />
		<many-to-one name="group" class="UserGroup" column="GROUPID" foreign-key="FK_USER_GROUP"></many-to-one>
	</class>
	
	<class name="UserGroup" table="USERGROUP">
		<id name="groupId" column="GROUPID" length="32">
			<generator class="assigned" />
		</id>
		<property name="name" column="NAME" length="32" />
		<property name="role" column="ROLE" length="1" />
		<set name="users" table="USER" inverse="true">
			<key column="GROUPID" />
			<one-to-many class="User" />
		</set>
	</class>

</hibernate-mapping>
