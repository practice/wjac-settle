<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
	
<hibernate-mapping package="org.jabberstory.cjac.consignsettle.domain" default-access="field">
	<class name="User" table="USER" lazy="true">
		<id name="userId" column="USERID" type="string" length="32">
			<generator class="assigned" />
		</id>
		<property name="username" column="USERNAME" type="string" length="32" />
		<property name="email" column="EMAIL" type="string" length="64" />
		<property name="password" column="PASSWORD" type="string" length="64" />
		<set name="userGroups" table="USER_USERGROUP" inverse="true">
			<key column="USERID" />
			<many-to-many class="UserGroup" column="GROUPID" foreign-key="FK_USER_TO_USERGROUP" />
		</set>
	</class>
	
</hibernate-mapping>
