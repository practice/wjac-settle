<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" 
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/jee
			http://www.springframework.org/schema/jee/spring-jee-2.5.xsd
			http://www.springframework.org/schema/aop
			http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
			http://www.springframework.org/schema/tx
			http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

<tx:advice id="txAdvice" transaction-manager="transactionManager">
	<tx:attributes>
		<tx:method name="add*" propagation="REQUIRED" />
		<tx:method name="create*" propagation="REQUIRED" />
		<tx:method name="remove*" propagation="REQUIRED" />
		<tx:method name="update*" propagation="REQUIRED" />
		<tx:method name="get*" read-only="true" />
		<tx:method name="find*" read-only="true" />
		<tx:method name="search*" read-only="true" />
	</tx:attributes>
</tx:advice>

<aop:config>
	<aop:pointcut expression="execution(public * org.jabberstory.cjac.*.domain.*Service.*(..))" id="servicePublicMethod"/>
	<aop:advisor advice-ref="txAdvice" pointcut-ref="servicePublicMethod" />
</aop:config>
	
<!--  Service and Repository objects -->
<bean id="userService" class="org.jabberstory.cjac.consignsettle.domain.UserServiceImpl" 
	p:userRepository-ref="userRepository"
	p:forumService-ref="forumService" />
<bean id="userRepository" class="org.jabberstory.cjac.consignsettle.domain.UserRepository" 
	p:hibernateTemplate-ref="hibernateTemplate" />

<bean id="organRepository" class="org.jabberstory.cjac.consignsettle.domain.OrganRepository" 
	p:hibernateTemplate-ref="hibernateTemplate" />
<bean id="organService" class="org.jabberstory.cjac.consignsettle.domain.OrganServiceImpl" 
	p:organRepository-ref="organRepository"
	p:userService-ref="userService" />	
	
<bean id="zipCodeRepository" class="org.jabberstory.cjac.consignsettle.domain.ZipCodeRepository" 
	p:hibernateTemplate-ref="hibernateTemplate" />
<bean id="zipCodeService" class="org.jabberstory.cjac.consignsettle.domain.ZipCodeServiceImpl" 
	p:zipCodeRepository-ref="zipCodeRepository" />	
	
<bean id="forumService" class="org.jabberstory.cjac.forum.domain.ForumServiceImpl"
	p:forumRepository-ref="forumRepository"	
	p:userService-ref="userService"
	p:organService-ref="organService" />
<bean id="forumRepository" class="org.jabberstory.cjac.forum.domain.ForumRepository"
	p:hibernateTemplate-ref="hibernateTemplate" 
	p:userService-ref="userService" />

</beans>
